# Kivy visual format. 2023 JCA.
#:kivy 2.1.0
#:import hex kivy.utils.get_color_from_hex

#:set clr_blue_med hex('#178CA4')
#:set clr_blue_fade hex('#6c9aa3')
#:set clr_body hex('#d8dbdd')
#:set font_title 'data/fonts/8-bit-operator/8bitOperatorPlus-Regular.ttf'
#:set font_button_size 15
#:set font_normal 20

# Background Color General
<CanvasBackground@Widget>:
    canvas:
        Color:
            rgba: clr_blue_fade
        Rectangle:
            pos: self.pos
            size: self.size

# Lower bar:
<LowerBar@BoxLayout>:
    padding: 10, 10
    size_hint_y: None
    height: 50
    back_color: clr_blue_med
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1) if self.back_color is None else self.back_color
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: '2023 Juan C.A.'
        bold: True
        font_size: 23
        font_name: font_title

    Button:
        text: 'x'
        font_size: 15
        background_color: clr_blue_fade
        background_normal: ''  # Delete default background
        size_hint_x: .05
        size_hint_y: .7
        valign: 'center'
        halign: 'center'
        on_release: app.close_application()

<LogInWindow>:
    # properties
    user_id: user_id
    user_password: user_password

    id: login_window
    orientation: 'vertical'
    spacing: 10
    distance_x: self.size[0]

    # Log on manager =======
    BoxLayout:
        orientation: 'vertical'
        # Change padding to center the layout
        padding: login_window.distance_x/4, 10
        spacing: 10

        Label:  # Needed to align the items in the center
            text: 'App Mk.I'
            bold: True
            font_size: 40
            font_name: font_title

        TextInput:
            id: user_id
            hint_text: 'Username'
            multiline: False
            # Change height:
            size_hint_y: None
            height: 40
            on_text_validate: user_password.focus = True

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            # Change height:
            size_hint_y: None
            height: 40
            TextInput:
                id: user_password
                hint_text: 'Password'
                password: True
                multiline: False
                size_hint_x: .7

            Button:
                text: 'Show'
                size_hint_x: .3
                on_press: root.show_hide_password(1)
                on_release: root.show_hide_password()

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            # Change height:
            size_hint_y: None
            height: 40
            Button:
                text: 'Log In'
                font_size: 15
                padding: 5, 5
                on_press:
                    root.check_log_in()

            Button:
                text: 'Create user'
                font_size: 15
                padding: 5, 5
                on_press:
                    root.manager.transition.direction ='right'
                    root.manager.current = 'new_user'
                    root.message_to_users = ''

        Label:  # Needed to align the items in the center
            text: root.message_to_users
            bold: True
            font_size: 25
            font_name: font_title
            color: (1, 0, 0, 1)
    LowerBar:
    # Used in all widgets.

<UserCreation>:
    # properties
    new_user: new_user
    new_password: new_password
    repeat_password: repeat_password

    id: create_new_user
    orientation: 'vertical'
    distance_x: self.size[0]

    CanvasBackground

    # Log on manager =======
    BoxLayout:  # Main box
        orientation: 'vertical'
        Label:
            text: 'Create your user'
            bold: True
            font_size: 40
            font_name: font_title
            height: 40

        BoxLayout:
            orientation: 'horizontal'
            height: 10
            Label:  # Username
                text: 'Username:'
            TextInput:
                id: new_user
                hint_text: 'Write here'
                multiline: False
                focus: True
                # Activate Password when enter is clicked.
                on_text_validate: new_password.focus = True
                on_text: root.validate_username()
            Label:
                text: root.label_check_username

        BoxLayout:
            orientation: 'horizontal'
            height: 20
            Label:  # Password
                text: 'Password:'
            TextInput:
                id: new_password
                hint_text: 'Write here'
                multiline: False
                # Activate Password 2 when enter is clicked.
                on_text_validate: repeat_password.focus = True
                on_text: root.validate_password()
            Label:
                text: root.label_check_password

        BoxLayout:
            orientation: 'horizontal'
            height: 20
            Label:  # Repeat password
                text: 'Repeat password:'
            TextInput:
                id: repeat_password
                hint_text: 'Write here'
                multiline: False
                on_text: root.validate_password()
            Label:
                text: root.label_check_repeat_password

        GridLayout:  # Item/Write/Check
            rows: 1
            cols: 3
            spacing: 10
            # Change padding to center the layout
            padding: create_new_user.distance_x/4, 10

            Button:
                text: 'Create User'
                font_size: font_button_size
                size_hint_y: None
                height: 40
                on_press: root.create_new_user()
            Label:
                # Emtpy
            Button:  # Go back
                text: 'Back'
                font_size: font_button_size
                size_hint_y: None
                height: 40
                on_press:
                    root.manager.transition.direction ='left'
                    root.manager.current = 'login'

        Label:
            # Dummy needed

    LowerBar:
        # Used in all widgets.

<Menu>:
    id: menu
    CanvasBackground

    # Main Menu =======
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Main Menu'
            bold: True
            font_size: 40
            font_name: font_title
            height: 40

        Label:
            text: 'Work in progress'
            font_size: font_normal

        Button:
            text: 'Log off'
            on_press:
                root.manager.transition.direction ='right'
                root.manager.current = 'login'

    LowerBar:
        # Used in all widgets.